\RequirePackage[framemethod=TikZ]{mdframed}
%\RequirePackage{amsthm}
\RequirePackage{ifthen}

\mdfdefinestyle{definitionstyle}{%
	linecolor=green,linewidth=2pt,%
	frametitlerule=true,%
	frametitlebackgroundcolor=green!20,%
	innertopmargin=\topskip,
}

\mdfdefinestyle{theoremstyle}{%
	linecolor=red,linewidth=2pt,%
	frametitlerule=true,%
	frametitlebackgroundcolor=red!20,%
	innertopmargin=\topskip,
	subtitlebelowline=false,subtitleaboveline=false,
	subtitlebackgroundcolor=red!10,
}

\mdfdefinestyle{exercisestyle}{%
	linecolor=blue,linewidth=2pt,%
	frametitlerule=true,%
	frametitlebackgroundcolor=blue!20,%
	innertopmargin=\topskip,
	subtitlebelowline=false,subtitleaboveline=false,
	subtitlebackgroundcolor=blue!10,
}

\mdtheorem[style=definitionstyle]{definizione}{Definizione}[chapter]
\mdtheorem[style=theoremstyle]{teorema}{Teorema}[chapter]

%\mdtheorem[style=exercisestyle]{esercizio}{Esercizio}[chapter]

%\theoremstyle{definition}
%\newtheorem{esercizio}[chapter]{Esercizio}

\newcounter{esercizio}[chapter]
\newenvironment{esercizio}[1][]
    {\refstepcounter{esercizio}\par\medskip
   \noindent\textbf{Esercizio~\theesercizio\ifthenelse{\equal{#1}{}}{}{:~#1}.}\par}
    {\bigskip}

